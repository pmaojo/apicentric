{
  "$schema": "https://schema.tauri.app/config/2",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "distDir": "dist",
    "devPath": "http://localhost:5173"
  },
  "package": {
    "productName": "Pulse GUI",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "shell": { "open": true }
    },
    "windows": [
      { "title": "Pulse GUI", "width": 800, "height": 600 }
    ],
    "bundle": {
      "identifier": "com.pulse.gui",
      "icon": []
    }
  }
}
